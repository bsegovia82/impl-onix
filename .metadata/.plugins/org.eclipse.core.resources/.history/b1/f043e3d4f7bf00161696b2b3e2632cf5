	<ui:define name="tabla_datos">
		<p:dataTable value="#{beanMantenedorPaciente.listaEntidades}"
			var="paciente"
			emptyMessage="#{beanMantenedorPaciente.mensajeTablaVacia}" rows="8"
			reflow="true" paginator="true" paginatorPosition="bottom" id="tablaDatos">

			<p:column filterBy="#{paciente.nombres.concat(' ').concat(paciente.apellidos)}"
				footerText="Nombres Completos">
				<h:outputText value="#{paciente.nombres.concat(' ').concat(paciente.apellidos)}" />
			</p:column>

			<p:column filterBy="#{paciente.numeroDocumento}"
				footerText="Identificación">
				<h:outputText value="#{paciente.numeroDocumento}" />
			</p:column>
			
			<p:column headerText="Género" width="10%"> 
				<h:outputText value="#{paciente.genero eq 'M'?'MASCULINO':'FEMENINO'}" />
			</p:column>
			
			<p:column headerText="Correo" width="17%" >
				<h:outputText value="#{paciente.direccionCorreo}" />
			</p:column>
			
			<p:column headerText="Teléfono" width="10%">
				<h:outputText value="#{paciente.telefonoContacto}" />
			</p:column>

			<p:column headerText="Estado" width="8%">
				<h:outputText
					value="#{paciente.estado eq beanMantenedorPaciente.estadoActivo?'ACTIVO':'INACTIVO'}" />
			</p:column>


			<p:column headerText="Fecha Registro">
				<h:outputText value="#{paciente.fechaRegistro}">
					<f:convertDateTime pattern="dd/MM/yyyy HH:mm:ss"
						timeZone="#{beanMantenedorPaciente.currentTimeZone}" />
				</h:outputText>
			</p:column>

			<p:column headerText="Acciones">
				<p:commandButton icon="ui-icon-pencil" title="Actualizar"
					actionListener="#{beanMantenedorPaciente.actualizarEntidad}"
					update=":#{p:component('dialogoMantenimiento')}" process="@this">

					<f:attribute
						name="#{beanMantenedorPaciente.nombreAtributoCambioEstado}"
						value="#{paciente}"></f:attribute>

				</p:commandButton>

				<p:commandButton icon="ui-icon-refresh" title="Cambiar Estado"
					actionListener="#{beanMantenedorPaciente.cambiarEstado}"
					update="@form" process="@this">
					<f:attribute
						name="#{beanMantenedorPaciente.nombreAtributoCambioEstado}"
						value="#{paciente}"></f:attribute>

					<p:confirm header="Confirmación"
						message="Seguro que desea realizar esta operación?"
						icon="ui-icon-alert" />
				</p:commandButton>
			</p:column>

		</p:dataTable>
	</ui:define>

