<?xml version="1.0" encoding="UTF-8"?>

<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">


	<component>
		<component-type>org.primefaces.component.ModenaMenu</component-type>
		<component-class>org.primefaces.modena.component.menu.ModenaMenu</component-class>
	</component>

	<render-kit>
		<renderer>
			<component-family>org.primefaces.component</component-family>
			<renderer-type>org.primefaces.component.ModenaMenuRenderer</renderer-type>
			<renderer-class>org.primefaces.modena.component.menu.ModenaMenuRenderer</renderer-class>
		</renderer>
	</render-kit>

	<application>
		<locale-config>
			<default-locale>es</default-locale>
			<supported-locale>es</supported-locale>
		</locale-config>
		
		<resource-bundle>
			<base-name>com.onix.modulo.vista.resources.general_es.properties</base-name>
			<var>general</var>
		</resource-bundle>

		<message-bundle>com.onix.modulo.vista.resources.general_es</message-bundle>
		
	</application>
</faces-config>